{
    "name": "makemkv-auto-rip",
    "version": "1.0.0",
    "description": "Automatically rips DVDs & Blu-rays using the MakeMKV console, then saves them to unique folders.",
    "main": "index.js",
    "type": "module",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "start": "node index.js",
        "rip": "node index.js",
        "load": "node src/cli/commands.js load",
        "eject": "node src/cli/commands.js eject",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/poisonite/MakeMKV-Auto-Rip.git"
    },
    "keywords": [
        "Poisonite",
        "Poisonite101",
        "MakeMKV",
        "Auto",
        "Rip",
        "AutoRip",
        "DVD",
        "Ripping",
        "Automatic",
        "Blu-ray",
        "Video",
        "Movie",
        "TV",
        "TV Show",
        "Series",
        "Disc",
        "UHD",
        "4K",
        "BD 100"
    ],
    "author": "Zac Ingoglia",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/poisonite/MakeMKV-Auto-Rip/issues"
    },
    "homepage": "https://github.com/poisonite/MakeMKV-Auto-Rip#readme",
    "dependencies": {
        "chalk": "^5.4.1",
        "config": "^4.0.1",
        "date-fns": "^4.1.0",
        "win-eject": "^1.0.2"
    },
    "devDependencies": {
        "vitest": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4"
    }
}